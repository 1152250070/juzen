.base-radius {
  border-radius: 44rpx;
}
.lg-radius {
  border-radius: 12rpx;
}
.shadow-box {
  background-color: #fff;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}
.tabs {
  height: 90rpx;
  line-height: 90rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  font-size: 26rpx;
  text-align: center;
  position: relative;
  z-index: 2;
  border-bottom: 1rpx solid #F5F5F5;
}
.tabs .tabs-item {
  height: 100%;
  color: #FFFFFF;
}
.tabs .tabs-item .rankImg {
  width: 16rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.tabs .tabs-item text {
  opacity: 0.7;
  font-size: 30rpx;
}
.tabs .tabs-item.active {
  font-size: 33rpx;
  font-weight: bold;
  color: #FFFFFF;
}
.tabs .tabs-item.active text {
  opacity: 1;
  font-size: 33rpx;
}
.active-bar {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  left: 0;
  right: 10rpx;
  -webkit-transition: left .15s, right .15s;
  transition: left .15s, right .15s;
}

