/* radio */
.ic-radio {
  width: 32rpx;
  height: 32rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: 1px solid #E6E7EB;
  position: relative;
  background-color: #F7F8FA;
  margin-right: 20rpx;
  -webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
}
.ic-radio:after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  left: 50%;
  top: 50%;
  background-color: #CCCCCC;
  margin-top: -4rpx;
  margin-left: -4rpx;
  -webkit-transition: all .3s ease-in-out;
  transition: all .3s ease-in-out;
}
.ic-radio.active {
  background-color: #4255B3;
  border-color: #4255B3;
}
.ic-radio.active:after {
  background-color: #fff;
}

